% Simpler border with just corners
% Usage: \simpleborder[color]
\newcommand{\simpleborder}[1][gold]{%
    \begin{tikzpicture}[remember picture, overlay]
        \coordinate (bordertopleft) at ($(current page.north west) + (0.5in,-0.5in)$);
        \coordinate (borderbotright) at ($(current page.south east) + (-0.5in,0.5in)$);
        \coordinate (bordertopright) at ($(current page.north east) + (-0.5in,-0.5in)$);
        \coordinate (borderbotleft) at ($(current page.south west) + (0.5in,0.5in)$);

        % Corner ornaments only
        \node[anchor=north west] at (bordertopleft)
            {\pgfornament[width=1.2in,color=#1]{63}};
        \node[anchor=north east] at (bordertopright)
            {\pgfornament[width=1.2in,color=#1,symmetry=v]{63}};
        \node[anchor=south west] at (borderbotleft)
            {\pgfornament[width=1.2in,color=#1,symmetry=h]{63}};
        \node[anchor=south east] at (borderbotright)
            {\pgfornament[width=1.2in,color=#1,symmetry=c]{63}};
    \end{tikzpicture}%
}

% Elaborate border with additional midpoint ornaments
% Usage: \elaborateborder[color]
\newcommand{\elaborateborder}[1][gold]{%
    \begin{tikzpicture}[remember picture, overlay]
        \coordinate (bordertopleft) at ($(current page.north west) + (0.6in,-0.6in)$);
        \coordinate (borderbotright) at ($(current page.south east) + (-0.6in,0.6in)$);
        \coordinate (bordertopright) at ($(current page.north east) + (-0.6in,-0.6in)$);
        \coordinate (borderbotleft) at ($(current page.south west) + (0.6in,0.6in)$);

        % Corner ornaments
        \node[anchor=north west] at (bordertopleft)
            {\pgfornament[width=2in,color=#1]{61}};
        \node[anchor=north east] at (bordertopright)
            {\pgfornament[width=2in,color=#1,symmetry=v]{61}};
        \node[anchor=south west] at (borderbotleft)
            {\pgfornament[width=2in,color=#1,symmetry=h]{61}};
        \node[anchor=south east] at (borderbotright)
            {\pgfornament[width=2in,color=#1,symmetry=c]{61}};

        % Top and bottom borders
        \node at ($(bordertopleft)!0.5!(bordertopright) + (0,-0.4in)$)
            {\pgfornament[width=6in,color=#1]{75}};
        \node at ($(borderbotleft)!0.5!(borderbotright) + (0,0.4in)$)
            {\pgfornament[width=6in,color=#1]{75}};

        % Side midpoint ornaments
        \node at ($(bordertopleft)!0.5!(borderbotleft) + (0.3in,0)$)
            {\pgfornament[width=0.8in,color=#1,angle=90]{75}};
        \node at ($(bordertopright)!0.5!(borderbotright) + (-0.3in,0)$)
            {\pgfornament[width=0.8in,color=#1,angle=90]{75}};

        % Decorative side lines
        \draw[#1,line width=1.5pt]
            ($(bordertopleft) + (0.8in,-2in)$) --
            ($(bordertopleft)!0.5!(borderbotleft) + (0.8in,0.6in)$);
        \draw[#1,line width=1.5pt]
            ($(bordertopleft)!0.5!(borderbotleft) + (0.8in,-0.6in)$) --
            ($(borderbotleft) + (0.8in,2in)$);
        \draw[#1,line width=1.5pt]
            ($(bordertopright) + (-0.8in,-2in)$) --
            ($(bordertopright)!0.5!(borderbotright) + (-0.8in,0.6in)$);
        \draw[#1,line width=1.5pt]
            ($(bordertopright)!0.5!(borderbotright) + (-0.8in,-0.6in)$) --
            ($(borderbotright) + (-0.8in,2in)$);
    \end{tikzpicture}%
}

