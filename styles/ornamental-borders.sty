%% ============================================================
%% Full Page Ornamental Border
%% ============================================================

% Main illuminated border command
% Usage: \illuminatedborder[color]
\newcommand{\illuminatedborder}[1][gold]{%
    \begin{tikzpicture}[remember picture, overlay]
        % Calculate border coordinates with inset from page edges
        \coordinate (bordertopleft) at ($(current page.north west) + (0.6in,-0.6in)$);
        \coordinate (borderbotright) at ($(current page.south east) + (-0.6in,0.6in)$);
        \coordinate (bordertopright) at ($(current page.north east) + (-0.6in,-0.6in)$);
        \coordinate (borderbotleft) at ($(current page.south west) + (0.6in,0.6in)$);

        % Corner ornaments (pgfornament 61 is an elegant corner piece)
        % Top-left corner
        \node[anchor=north west] at (bordertopleft)
            {\pgfornament[width=1.8in,color=#1]{61}};
        % Top-right corner (vertical mirror)
        \node[anchor=north east] at (bordertopright)
            {\pgfornament[width=1.8in,color=#1,symmetry=v]{61}};
        % Bottom-left corner (horizontal mirror)
        \node[anchor=south west] at (borderbotleft)
            {\pgfornament[width=1.8in,color=#1,symmetry=h]{61}};
        % Bottom-right corner (central/both mirror)
        \node[anchor=south east] at (borderbotright)
            {\pgfornament[width=1.8in,color=#1,symmetry=c]{61}};

        % Top border ornament (centered)
        \node at ($(bordertopleft)!0.5!(bordertopright) + (0,-0.3in)$)
            {\pgfornament[width=5in,color=#1]{75}};

        % Bottom border ornament (centered)
        \node at ($(borderbotleft)!0.5!(borderbotright) + (0,0.3in)$)
            {\pgfornament[width=5in,color=#1]{75}};

        % Side decorative lines
        \draw[#1,line width=1.5pt]
            ($(bordertopleft) + (0.7in,-1.8in)$) --
            ($(borderbotleft) + (0.7in,1.8in)$);
        \draw[#1,line width=1.5pt]
            ($(bordertopright) + (-0.7in,-1.8in)$) --
            ($(borderbotright) + (-0.7in,1.8in)$);
    \end{tikzpicture}%
}

%% ============================================================
%% Alternative Border Styles
